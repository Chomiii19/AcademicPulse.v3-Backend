{
  "compilerOptions": {
    "target": "ES5", // Target ES5 for compatibility
    "module": "CommonJS", // Use CommonJS for modules
    "moduleResolution": "node", // Node-style module resolution
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Your source directory
    "esModuleInterop": true, // Enable interop between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from CommonJS
    "strict": true, // Enable strict type-checking
    "resolveJsonModule": true, // Allow imports of JSON files
    "skipLibCheck": true // Skip library checking for faster builds
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
